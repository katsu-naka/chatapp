<%#部分テンプレート%>
<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-main"> <%#メッセージ全体の表示欄%>
  <%= render partial: 'message', collection: @messages %> <%#collectionメソッドを使用してrenderメソッドの処理を繰り返す%>
</div>

<%= form_with model: [@room, @message], html: {class: "chat-footer"}, local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, placeholder: 'type a message', class: 'message-box' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>